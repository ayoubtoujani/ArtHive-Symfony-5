<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="stylesheet" href="{{ asset('css/styleLogin.css') }}">
    <title>Arthive</title>
</head>
<body>
    <div class="container">
        <form method="post">
            {{ form_start(emailForm) }}
            <h2>Mot de passe oublié</h2>
            <div class="row">
                <div class="col-12 text-center">
                    <p>Veuillez saisir votre e-mail pour rechercher votre compte</p>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    {{ form_widget(emailForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
                    {{ form_errors(emailForm.email) }}
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">Envoyer</button>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-12">
                    <a href="{{ path('app_login') }}" class="text-primary">Revenir à la page de connexion</a>
                </div>
            </div>
            {{ form_end(emailForm) }}
        </form>
    </div> 
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>