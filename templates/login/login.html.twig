{# templates/login/login.html.twig #}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="stylesheet" href="{{ asset('css/styleLogin.css') }}">
    <title>Modern Login Page | AsmrProg</title>
</head>

<body>

    <div class="container" id="container">
        <div class="form-container sign-up">
            <form method="post">
                {{ form_start(registerForm) }}
                <div>
                    {{ form_widget(registerForm.nomUser, {'attr': {'placeholder': 'Name'}}) }}
                    {{ form_errors(registerForm.nomUser) }}
                </div>

                <div>
                    {{ form_widget(registerForm.prenomUser, {'attr': {'placeholder': 'Surname'}}) }}
                    {{ form_errors(registerForm.prenomUser) }}
                </div>

                <div>
                    {{ form_widget(registerForm.email, {'attr': {'placeholder': 'Email'}}) }}
                    {{ form_errors(registerForm.email) }}
                </div>

                <div>
                    {{ form_widget(registerForm.mdpUser, {'attr': {'placeholder': 'Password'}}) }}
                    {{ form_errors(registerForm.mdpUser) }}
                </div>

                <div>
                    {{ form_widget(registerForm.dNaissanceUser, {'attr': {'placeholder': 'Date of Birth'}}) }}
                    {{ form_errors(registerForm.dNaissanceUser) }}
                </div>

                <div>
                    {{ form_widget(registerForm.ville, {'attr': {'placeholder': 'City'}}) }}
                    {{ form_errors(registerForm.ville) }}
                </div>

                <div>
                    {{ form_widget(registerForm.numTelUser, {'attr': {'placeholder': 'Phone Number'}}) }}
                    {{ form_errors(registerForm.numTelUser) }}
                </div>
                
                <button type="submit">Sign Up</button>
                {{ form_end(registerForm) }}
            </form>

        </div>

        
        <div class="form-container sign-in">
            <form method="post">
                {{ form_start(loginForm) }}
                <h1>Sign In</h1>
                {% if error %}
                    <p>{{ error }}</p>
                {% endif %}

                {% if success %}
                    <p>{{ success }}</p>
                {% endif %}

                    {{ form_widget(loginForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
                    {{ form_errors(loginForm.email) }}

                    {{ form_widget(loginForm.mdpUser, {'attr': {'class': 'form-control', 'placeholder': 'Password'}}) }}
                    {{ form_errors(loginForm.mdpUser) }}
                    
                <button type="submit" class="btn btn-primary">Sign in</button>
                {{ form_end(loginForm) }}
            </form>
        </div>
        <div class="toggle-container">
            <div class="toggle">
                <div class="toggle-panel toggle-left">
                    <h1>Welcome Back!</h1>
                    <p>Enter your personal details to use all of site features</p>
                    <button class="hidden" id="login">Sign In</button>
                </div>
                <div class="toggle-panel toggle-right">
                    <h1>Hello, Friend!</h1>
                    <p>Register with your personal details to use all of site features</p>
                    <button class="hidden" id="register">Sign Up</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="{{ asset('scripts/scriptLogin.js') }}"></script>
</body>
