    window.addEventListener('click', function(event) {
        iconContainers.forEach(iconContainer => {
            const menu = iconContainer.querySelector('.menu-contextuel');
            if (!iconContainer.contains(event.target)) {
                menu.style.display = 'none';
            }
        });
    });
});
