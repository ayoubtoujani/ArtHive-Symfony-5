
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Sharp" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('css/styleAdmin.css') }}">
     <title>{% block title %}ArtHive Dashboard{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
</head>

<body>

    <div class="container">
        <!-- Sidebar Section -->
        <aside>
            <div class="logo" style="height:15%">
                <img src="{{ asset('images/arthive_black.png') }}">
            </div>

            <div class="sidebar">
                <a href="{{ path('app_admin') }} "class="active">
                    <span class="material-icons-sharp">
                        dashboard
                    </span>
                    <h3>Dashboard</h3>
                </a>

                <a href="{{ path('app_admin_users') }}">
                    <span class="material-icons-sharp">
                        person_outline
                    </span>
                    <h3>Utilisateurs</h3>
                </a>
              
                <a href={{ path('app_admin_posts') }}>
                    <span class="material-icons-sharp">
                        post_add
                    </span>
                    <h3>Posts</h3>
                </a>
                 <a href={{ path('app_admin_groups') }}>
                    <span class="material-icons-sharp">
                        groups
                    </span>
                    <h3>Groups</h3>
                </a>
                

                <a href={{ path('app_admin_events') }}>
                    <span class="material-icons-sharp">
                        event
                    </span>
                    <h3>Evénements</h3>
                </a>

                <a href={{ path('app_admin_products') }}>
                    <span class="material-icons-sharp">
                        inventory_2
                    </span>
                    <h3>Produits</h3>
                </a>

                <a href={{ path('app_admin_reports') }}>
                    <span class="material-icons-sharp">
                        report_gmailerrorred
                    </span>
                    <h3>Reports</h3>
                </a>

                <a href="{{ path('app_login') }}" id="logout">
                    <span class="material-icons-sharp">
                        logout
                    </span>
                    <h3>Logout</h3>
                </a>
            </div>
        </aside>
        <!-- End of Sidebar Section -->

        <!-- Main Content -->
        <main>

            <h1>Analytics</h1>
            <!-- Analyses -->
            <div class="analyse">
                <div class="sales">
                    <div class="status">
                        <div class="info">
                            <h3>Utilisateurs</h3>
                            <h1>65,024</h1>
                        </div>
                    </div>
                </div>
                {% block groupe_number %}
                <div class="visits">
                    <div class="status">
                        <div class="info">
                            <h3>Groupes</h3>

                            <h1>27</h1>

                        </div>
                    </div>
                </div>
                {% endblock %}


                <div class="searches">
                    <div class="status">
                        <div class="info">
                            <h3>Evénements</h3>
                            <h1>2,147</h1>
                        </div>
                    </div>
                </div>

                <div class="">
                    <div class="status">
                        <div class="info">
                            <h3>Produits</h3>
                            <h1>3,221</h1>
                        </div>
                    </div>
                </div>
            </div>
            <!-- End of Analyses -->

            <div class="container-lg"> <!-- Use 'container-lg' class for a wider container -->
                <div class="recent-orders">
                    {% block content %}


                    {% endblock %}
                </div>
            </div>



        
        </main>

        <!-- End of Main Content -->


        <!-- Right Section -->
        <div class="right-section">
            <div class="nav">
                <button id="menu-btn">
                    <span class="material-icons-sharp">
                        menu
                    </span>
                </button>
                <div class="dark-mode">
                    <span class="material-icons-sharp active">
                        light_mode
                    </span>
                    <span class="material-icons-sharp">
                        dark_mode
                    </span>
                </div>

                <div class="profile">
                    <div class="info">
                        <p>Hey, <b>{{ user.getPrenomUser() }}</b></p>
                        <small class="text-muted">{{ user.getNomUser() }}</small>
                    </div>
                    <div class="profile-photo">
                      <img src="{{ asset('images/' ~ user.getPhoto() ) }}" style="width: 30px; height: 30px;" alt="">

                    </div>
                </div>

            </div>
            <!-- End of Nav -->



        </div>


    </div>

    <script src="{{ asset('scripts/indexAdmin.js') }}"></script>
</body>