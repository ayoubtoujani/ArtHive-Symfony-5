<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Sharp" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('css/styleProfile.css') }}">
    <title>Arthive</title>
</head>
<body>

    <div class="container">
        <div class="row mb-4">
            <div class="col-2">
            </div>
            <div class="col-10 d-flex justify-content-end">
                <a href="{{ path('app_profileEdit') }}"><button class="btn btn-primary rounded-pill"><strong>Modifier Profile</strong></button></a>
            </div>
        </div>
        <div class="row mb-5">
            <div class="col-2">
                <img class="img-fluid" src="{{ asset(user.photo) }}" alt="Profile photo">
            </div>
            <div class="col-10">
                <div class="row mb-2">
                    <div class="col-12"><h1>{{ user.nomUser }} {{ user.prenomUser }} </h1></div>
                </div>
                <div class="row">
                    <div class="col-4 d-flex align-items-center">
                        <span class="material-icons-sharp">location_on</span>
                        <h3 class="ms-2">{{ user.ville }}</h3>
                    </div>
                    <div class="col-4 d-flex align-items-center">
                        <span class="material-icons-sharp">cake</span>
                        <h3 class="ms-2">{{ user.dNaissanceUser|date('Y-m-d')}}</h3>
                    </div>
                    <div class="col-4 d-flex align-items-center">
                        <span class="material-icons-sharp">email</span>
                        <h3 class="ms-2">{{ user.email }}</h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <p>{{ user.bio }}</p>
            </div>
        </div>    
    </div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
