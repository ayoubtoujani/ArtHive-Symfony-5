
   {% extends 'feed.html.twig' %}

{% block title %}
     ArtHive | Modifier Profil
        
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
<style>
body {
            background-image: url('https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTSivdg9sGuIwUPz6n3Cx2W0FYXTOqRkUO4HEkoqd6oAFESCcTrQxGoK_7kN9JXI8SZkbs&usqp=CAU');
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
        }

        </style>
   
  {% endblock %}

{% block content %}
    <div class="row mt-4 mb-5">
        <div class="col-12 text-center">
            <h1><strong>Modifier Votre Profile</strong></h1>
        </div>
    </div>
    <div class="mt-5 container rounded" style="background-color:lightgray;">
        <form method="post" enctype="multipart/form-data">
        {{ form_start(editProfileForm) }}
    
        
        <div class="row mb-5" >
            <div class="col-12 d-flex justify-content-center">
                <img class="img-fluid h-50 rounded" src="{{ asset('/images/profile_pictures/' ~ user.photo)  }}" alt="Profile photo" >
            </div>
        </div>

        <div class="row mb-5">
            <div class="col-12 d-flex justify-content-center">
                {{ form_widget(editProfileForm.photo, {'attr': {'id':'profilePic','class': ' btn btn-primary rounded-pill form-control', 'placeholder': 'Photo','style':'width:400px;', 'onchange':'previewImage(event)'}}) }}
            </div>
        </div>
                            
                        

        <div class="row mb-3">
            <div class ="col-6">
                {{ form_widget(editProfileForm.nomUser, {'attr': {'class': 'form-control', 'placeholder': 'Name'}}) }}
                <span class="text-danger" style="font-size:12px;">{{ form_errors(editProfileForm.nomUser) }}</span>
            </div>

            <div class ="col-6">
                {{ form_widget(editProfileForm.prenomUser, {'attr': {'class': 'form-control', 'placeholder': 'Surname'}}) }}
                <span class="text-danger" style="font-size:12px;">{{ form_errors(editProfileForm.prenomUser) }}</span>
            </div>
        </div>

        <div class="row mb-3">
            <div class ="col-6">
                {{ form_widget(editProfileForm.dNaissanceUser, {'attr': {'class': 'form-control', 'placeholder': 'Date of Birth'}}) }}
                <span class="text-danger" style="font-size:12px;">{{ form_errors(editProfileForm.dNaissanceUser) }}</span>
            </div>

            <div class ="col-6">
                {{ form_widget(editProfileForm.ville, { 'attr': {'class': 'form-control mt-2', 'id': 'country-select'} }) }}
                <span class="text-danger" style="font-size:12px;">{{ form_errors(editProfileForm.ville) }}</span>
            </div>
        </div>

        <div class="row mb-3">

            <div class="col-6">
                {{ form_widget(editProfileForm.numTelUser, {'attr': {'class': 'form-control', 'placeholder': 'Phone Number'}}) }}
                <span class="text-danger" style="font-size:12px;">{{ form_errors(editProfileForm.numTelUser) }}</span>
            </div>
{#             <div class="col-6">
                    {{ form_widget(editProfileForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
                    {{ form_errors(editProfileForm.email) }}
            </div> #}
        </div>

        <div class="row mb-3">
            <div class="col-12">
                {{ form_widget(editProfileForm.bio, {'attr': {'class': 'form-control', 'placeholder': 'Bio'}}) }}
                <span class="text-danger" style="font-size:12px;">{{ form_errors(editProfileForm.numTelUser) }}</span>
            </div>
        </div>

        <div class="row mt-4">
        <div class="col-12 d-flex justify-content-center">
            <a href="{{ path('app_profile') }}">
                <button type="button" class="btn btn-secondary rounded-pill me-3">Annuler</button>
            </a>
            <button type="submit" class="btn btn-primary rounded-pill">Enregistrer</button>
        </div>
        {{ form_end(editProfileForm) }}
        </form>

    </div>
    <script>
        function previewImage(event) {
        var input = event.target;
        var preview = document.getElementById('preview');

        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                preview.src = e.target.result;
                preview.style.display = 'block';
            }

            reader.readAsDataURL(input.files[0]);
        }
    }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

{% endblock %}