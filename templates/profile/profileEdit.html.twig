<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Sharp" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <title>Arthive</title>
</head>
<body style="background-color:#F2F1F1;font-family: 'Poppins', sans-serif;">

    <nav class="navbar bg-body-tertiary d-flex">
        <div class="ms-5">
            <span class="navbar-brand h1"><h2>Arthive</h2></span>
        </div>
        <div class="ms-auto me-5">
            <a href="{{ path('app_login') }}" class="btn rounded-pill text-white p-2" style="background-color:#0000FF;">DÃ©connexion</a>
        </div>
    </nav>
    <div class="row mt-4 mb-5">
        <div class="col-12 text-center">
            <h1><strong>Modifier Profile</strong></h1>
        </div>
    </div>
    <div class="mt-5 container rounded" style="background-color:lightgray;">
        <form method="post" enctype="multipart/form-data">
        {{ form_start(editProfileForm) }}
        <div class="row mb-2">
            <div class="col-12 text-center">
                <p>Photo de profile</p>
            </div>
        </div>
        
        <div class="row mb-5">
            <div class="col-12 d-flex justify-content-center">
                <img class="img-fluid h-50 rounded" src="{{ asset('/images/profile_pictures/' ~ user.photo)  }}" alt="Profile photo" >
            </div>
        </div>

        <div class="row mb-5">
            <div class="col-12 d-flex justify-content-center">
                {{ form_widget(editProfileForm.photo, {'attr': {'id':'profilePic','class': ' btn btn-primary rounded-pill form-control', 'placeholder': 'Photo','style':'width:400px;', 'onchange':'previewImage(event)'}}) }}
            </div>
        </div>
                            
                        

        <div class="row mb-3">
            <div class ="col-6">
                {{ form_widget(editProfileForm.nomUser, {'attr': {'class': 'form-control', 'placeholder': 'Name'}}) }}
                <span class="text-danger" style="font-size:12px;">{{ form_errors(editProfileForm.nomUser) }}</span>
            </div>

            <div class ="col-6">
                {{ form_widget(editProfileForm.prenomUser, {'attr': {'class': 'form-control', 'placeholder': 'Surname'}}) }}
                <span class="text-danger" style="font-size:12px;">{{ form_errors(editProfileForm.prenomUser) }}</span>
            </div>
        </div>

        <div class="row mb-3">
            <div class ="col-6">
                {{ form_widget(editProfileForm.dNaissanceUser, {'attr': {'class': 'form-control', 'placeholder': 'Date of Birth'}}) }}
                <span class="text-danger" style="font-size:12px;">{{ form_errors(editProfileForm.dNaissanceUser) }}</span>
            </div>

            <div class ="col-6">
                {{ form_widget(editProfileForm.ville, { 'attr': {'class': 'form-control mt-2', 'id': 'country-select'} }) }}
                <span class="text-danger" style="font-size:12px;">{{ form_errors(editProfileForm.ville) }}</span>
            </div>
        </div>

        <div class="row mb-3">

            <div class="col-6">
                {{ form_widget(editProfileForm.numTelUser, {'attr': {'class': 'form-control', 'placeholder': 'Phone Number'}}) }}
                <span class="text-danger" style="font-size:12px;">{{ form_errors(editProfileForm.numTelUser) }}</span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-12">
                {{ form_widget(editProfileForm.bio, {'attr': {'class': 'form-control', 'placeholder': 'Bio'}}) }}
                <span class="text-danger" style="font-size:12px;">{{ form_errors(editProfileForm.numTelUser) }}</span>
            </div>
        </div>

        <div class="row mt-4">
        <div class="col-12 d-flex justify-content-center">
            <a href="{{ path('app_profile') }}">
                <button type="button" class="btn btn-secondary rounded-pill me-3">Annuler</button>
            </a>
            <button type="submit" class="btn btn-primary rounded-pill">Enregistrer</button>
        </div>
        {{ form_end(editProfileForm) }}
        </form>

    </div>
    <script>
        function previewImage(event) {
        var input = event.target;
        var preview = document.getElementById('preview');

        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                preview.src = e.target.result;
                preview.style.display = 'block';
            }

            reader.readAsDataURL(input.files[0]);
        }
    }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>