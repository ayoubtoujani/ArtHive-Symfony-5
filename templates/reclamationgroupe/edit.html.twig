{% extends 'feed.html.twig' %}

{% block title %}Edit Reclamationgroupe{% endblock %}

{% block content %}
    <div class="page-container">
        <h1>Edit Reclamationgroupe</h1>

        <div class="form-container">
            {{ include('reclamationgroupe/_form.html.twig', {'button_label': 'Update'}) }}
        </div>

        <a href="{{ path('app_reclamationgroupe_index') }}" class="back-link">back to list</a>

        {{ include('reclamationgroupe/_delete_form.html.twig') }}
    </div>
{% endblock %}
{% block stylesheets %}
<style>
    /* CSS styles for Edit Reclamationgroupe page */
    .page-container {
        max-width: 800px;
        margin: 20px auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 8px;
        background-color: #fff;
    }

    h1 {
        font-size: 24px;
        margin-bottom: 20px;
    }

    .back-link {
        display: block;
        margin-top: 20px;
        color: #007bff;
        text-decoration: none;
    }

    .back-link:hover {
        text-decoration: underline;
    }

    .form-container {
        max-width: 500px;
        margin-top: 20px;
    }

    .form-label {
        font-weight: bold;
    }

    .form-control {
        width: 100%;
        padding: 8px;
        margin-bottom: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    .is-invalid {
        border-color: #dc3545;
    }

    .btn {
        display: inline-block;
        padding: 8px 16px;
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .btn:hover {
        background-color: #0056b3;
    }

</style>
{% endblock %}
